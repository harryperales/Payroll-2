@page
@model LoginModel

@{
    ViewData["Title"] = Resource.Login;
}

<div class="row">
    <div class="col-md-12 center-container "> 
        <div class="col-md-4 center-internal-container">
            <div class="default_color" style="margin: 0; padding:0;">
                <h2 style="margin: 0; padding: 10px;"> @ViewData["Title"]</h2>
            </div>
            <div style="margin:30px">
                <section>
                    <form method="post">
                        <h4>@Resource.LoginMessage</h4>
                        <hr />
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="Input.Email"></label>
                            <input asp-for="Input.Email" class="form-control" />
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Input.Password"></label>
                            <input asp-for="Input.Password" class="form-control" />
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <div class="checkbox">
                                <label asp-for="Input.RememberMe">
                                    <input asp-for="Input.RememberMe" />
                                    @Html.DisplayNameFor(m => m.Input.RememberMe)
                                </label>
                            </div>
                        </div>
                        <div class="form-group">
                            <button type="submit" asp-route-returnUrl="/Dashboard/Index" class="btn btn-default default_color">@Resource.Login</button>
                        </div>
                        <div class="form-group">
                            <p>
                                <a asp-page="./ForgotPassword">@Resource.ForgotPassword</a>
                            </p>
                            <p>
                                <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">@Resource.NewUser</a>
                            </p>
                        </div>
                    </form>
                </section>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
