@model IEnumerable<Payroll.Models.Currency>

@{
    ViewData["Title"] = "Listagem de Moedas";
}

<h2>Cadastro de Moedas</h2>

<p>
    <a asp-action="Create">Nova Moeda</a>
</p>
<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Exchange)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreationUser)
            </th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Exchange)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreationUser)
            </td>
            <td>
                <a asp-action="Details" asp-route-id="@item.Id"><img alt="Details" src="~/images/baseline-visibility-24px.svg"></a>
                <a asp-action="Edit" asp-route-id="@item.Id" ><img alt="Edit" src="~/images/baseline-edit-24px.svg"></a>
                <a asp-action="Delete" asp-route-id="@item.Id"><img alt="Delete" src="~/images/baseline-delete-24px.svg"></a>
            </td>
        </tr>
}
    </tbody>
</table>
