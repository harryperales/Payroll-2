@model Payroll.Models.Function

@{
    var mode = ViewBag.Mode;
}

<div class="row" align="left">
    <div class="col-md-12">
        <form asp-action="@mode">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" disabled="@(mode == "Details")" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CompanyId" class="control-label"></label>
                <select asp-for="CompanyId" class="form-control" asp-items="ViewBag.Companies" disabled="@(mode == "Details")"></select>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" disabled="@(mode == "Details")" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ManagerCommission" class="control-label"></label>
                <input asp-for="ManagerCommission" disabled="@(mode == "Details")" class="form-control" />
                <span asp-validation-for="ManagerCommission" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="IsManagerFunction" disabled="@(mode == "Details")" /> @Html.DisplayNameFor(model => model.IsManagerFunction)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="HasDangerous" disabled="@(mode == "Details")" /> @Html.DisplayNameFor(model => model.HasDangerous)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="HasUnhealthy" disabled="@(mode == "Details")" /> @Html.DisplayNameFor(model => model.HasUnhealthy)
                    </label>
                </div>
            </div>

            @if (mode == "Edit")
            {
                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="CreatedAt" />
                <input type="hidden" asp-for="CreatedBy" />
            }
            <div class="form-group" align="right">

                <a class="btn btn-default" asp-action="Index">@Resource.Back</a>
                @if (mode != "Details")
                {
                    <input type="submit" value="@(mode == "Create" ? Resource.Add : mode == "Edit" ? Resource.Save : "")" class="btn btn-default default_color" />
                }
            </div>
        </form>
    </div>
</div>

