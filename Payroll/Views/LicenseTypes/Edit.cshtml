@model Payroll.Models.LicenseType

<div class="row" align="left">
    <div class="col-md-12">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="QtyDaysDefault" class="control-label"></label>
                <input asp-for="QtyDaysDefault" class="form-control" />
                <span asp-validation-for="QtyDaysDefault" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="CreatedAt" />
            <input type="hidden" asp-for="CreatedBy" />
            <div class="form-group" align="right">
                <a class="btn btn-default" asp-action="Index">@Resource.Back</a>
                <input type="submit" value=@Resource.Save class="btn btn-default default_color" />
            </div>
        </form>
    </div>
</div>