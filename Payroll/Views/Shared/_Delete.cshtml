@model Payroll.Models.Basic

@{

    var modalId = "Delete_Modal" + Model.Id;

}

<script type="text/javascript">
   
</script>

<div class="row" align="left">
    <div class="col-md-12" align="left">
        <h4>@Resource.AreYouSure @Html.DisplayFor(model => model.Name) ?</h4>
        <form asp-action="Delete" id=@("form_"+Model.Id)>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" id=@("name_"+Model.Id) asp-for="Name" />
            <input type="hidden" asp-for="CreatedAt" />
            <input type="hidden" asp-for="CreatedBy" />
            <input type="hidden" asp-for="UpdatedAt" />
            <input type="hidden" asp-for="UpdatedBy" />
            <div class="form-group" align="right">
                <div class="form-group" align="left">
                    <label for="confirm">@Resource.ConfirmDeleteInstruction</label>
                    <input id=@("confirm_"+Model.Id) type="text" class="form-control" />
                    <span id=@("span_"+Model.Id) class="text-danger"></span>
                </div>
                <a class="btn btn-default" onclick="$('#@(modalId)').modal('hide');$('#Form_@(modalId)').trigger('reset');">@Resource.Back</a>
                <input type="button" value=@Resource.Delete class="btn btn-default default_color" onclick="confirm('@Model.Id', $('#confirm_@Model.Id'), $('#name_@Model.Id'), $('#form_@Model.Id'))" />
            </div>
        </form>
    </div>
</div>

