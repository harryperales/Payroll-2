@model Basic

    <td align="center" style="border-right:none">
        <a href="#" data-toggle="modal" data-target="#Details_Modal@(Model.Id)">
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24">
                <path d="M0 0h24v24H0z" fill="none" />
                <path class="icon" d="M12 4.5C7 4.5 2.73 7.61 1 12c1.73 4.39 6 7.5 11 7.5s9.27-3.11 11-7.5c-1.73-4.39-6-7.5-11-7.5zM12 17c-2.76 0-5-2.24-5-5s2.24-5 5-5 5 2.24 5 5-2.24 5-5 5zm0-8c-1.66 0-3 1.34-3 3s1.34 3 3 3 3-1.34 3-3-1.34-3-3-3z" />
            </svg>
        </a>
        <div class="modal fade" id="Details_Modal@(Model.Id)" tabindex="-1" role="dialog" aria-labelledby="deleteOccupationModal" aria-hidden="true" data-backdrop="static" data-keyboard="false">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header default_color">
                        <h4 class="modal-title" align="left" id="exampleModalLabel">@Resource.Details</h4>
                    </div>
                    <div class="modal-body" style="border:none;">
                        @{
                            ViewData["Mode"] = "Details";
                        }
                        <partial name="Form" model="@Model" view-data="ViewData" />
                    </div>
                </div>
            </div>
        </div>
    </td>

    <td align="center" style="border-right:none;border-left:none">
        <a href="#" data-toggle="modal" data-target="#Edit_Modal@(Model.Id)">
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24">
                <path class="icon" d="M3 17.25V21h3.75L17.81 9.94l-3.75-3.75L3 17.25zM20.71 7.04c.39-.39.39-1.02 0-1.41l-2.34-2.34c-.39-.39-1.02-.39-1.41 0l-1.83 1.83 3.75 3.75 1.83-1.83z" />
                <path d="M0 0h24v24H0z" fill="none" />
            </svg>
        </a>

        <div class="modal fade" id="Edit_Modal@(Model.Id)" tabindex="-1" role="dialog" aria-labelledby="deleteOccupationModal" aria-hidden="true" data-backdrop="static" data-keyboard="false">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header default_color">
                        <h4 class="modal-title" align="left" id="exampleModalLabel">@Resource.Edit</h4>
                    </div>
                    <div class="modal-body" style="border:none;">
                        @{
                            ViewData["Mode"] = "Edit";
                        }
                        <partial name="Form" model="@Model" view-data="ViewData" />
                    </div>
                </div>
            </div>
        </div>
    </td>

    <td align="center" style="border-left:none">
        <a href="#" data-toggle="modal" data-target="#Delete_Modal@(Model.Id)">
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24">
                <path class="icon" d="M6 19c0 1.1.9 2 2 2h8c1.1 0 2-.9 2-2V7H6v12zM19 4h-3.5l-1-1h-5l-1 1H5v2h14V4z" />
                <path d="M0 0h24v24H0z" fill="none" />
            </svg>
        </a>
        <div class="modal fade" id="Delete_Modal@(Model.Id)" tabindex="-1" role="dialog" aria-labelledby="deleteOccupationModal" aria-hidden="true" data-backdrop="static" data-keyboard="false">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header default_color">
                        <h4 class="modal-title" align="left" id="exampleModalLabel">@Resource.Delete</h4>
                    </div>
                    <div class="modal-body" style="border:none;">
                        <partial name="_Delete" model="@Model" />
                    </div>
                </div>
            </div>
        </div>
    </td>
