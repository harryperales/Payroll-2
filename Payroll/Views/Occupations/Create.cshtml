@model Payroll.Models.Occupation

<div class="row">
    <div class="col-md-12">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="IsRegulated" /> @Html.DisplayNameFor(model => model.IsRegulated)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="CouncilName" class="control-label"></label>
                <input asp-for="CouncilName" class="form-control" />
                <span asp-validation-for="CouncilName" class="text-danger"></span>
            </div>
            <div class="form-group" align="right">
                <a asp-action="Index" class="btn btn-default">@Resource.Back</a>
                <input type="submit" value="@Resource.Add" class="btn btn-default default_color" />
            </div>
        </form>
    </div>
</div>
