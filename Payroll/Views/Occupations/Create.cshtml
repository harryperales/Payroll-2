@model Payroll.Models.Occupation

@{
    ViewData["Title"] = Resource.OccupationsTitle;
}

<h2>@Resource.NewOccupation</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="IsRegulated" /> @Html.DisplayNameFor(model => model.IsRegulated)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="CouncilName" class="control-label"></label>
                <input asp-for="CouncilName" class="form-control" />
                <span asp-validation-for="CouncilName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default blackWhite" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">@Resource.Back</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
